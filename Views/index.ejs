<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <title>Time Table Generator</title>
  </head>
  <body>
    <div class="mx-auto table-responsive" style="text-align: center;">
      <h1>Time Table</h1>
      <form action="/timeTable" method="POST" class="my-4 form-inline">
        <!-- <input
          required
          placeholder="Class"
          type="number"
          name="class"
          id="class"
          class="form-control col mr-2"
          disabled
        /> -->
        <input
          required
          placeholder="Department"
          type="text"
          name="dept"
          id="dept"
          class="form-control col mr-2"
        />
        <input
          required
          placeholder="Course"
          type="text"
          name="course"
          id="course"
          class="form-control col mr-2"
        />
        <input
          required
          placeholder="Room"
          type="text"
          name="room"
          id="room"
          class="form-control col mr-2"
        />
        <input
          required
          placeholder="Instructor"
          type="text"
          name="instructor"
          id="instructor"
          class="form-control col mr-2"
        />
        <input
          required
          placeholder="Meeting Timing"
          type="text"
          name="meetingTiming"
          id="meetingTiming"
          class="form-control mr-2"
        />
        <button class="btn btn-success" type="submit">Add</button>
      </form>

      <table class="table align-middle table-striped">
        <thead>
          <tr>
            <th>Class #</th>
            <th>Dept</th>
            <th>Course (number, max # of students)</th>
            <th>Room (Capacity)</th>
            <th>Instructor (Id)</th>
            <th>Meeting Time (Id)</th>
          </tr>
        </thead>
        <tbody>
          <% table.forEach(tab => { %>
            <tr>
              <td><%= tab.class %></td>
              <td><%= tab.department %></td>
              <td><%= tab.course %></td>
              <td><%= tab.room %></td>
              <td><%= tab.instructor %></td>
              <td><%= tab.meetingTiming %></td>
            </tr>
          <%}) %> 
        </tbody>
      </table>
    </div>
  </body>
</html>
